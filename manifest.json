{
  "name": "GistLog",
  "description": "GistLog - Pretiffy the gist view in the form of blog",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "GistLog"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://gist.github.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs", "https://gist.github.com/*"]
}
